<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>plugins</artifactId>
        <groupId>org.openmole</groupId>
        <version>0.3-SNAPSHOT</version>
    </parent>

    <artifactId>org.openmole.plugin.resource.virtual</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.misc.exception</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.core.implementation</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.misc.workspace</artifactId>
            <version>${project.version}</version>
        </dependency>
                <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.misc.executorservice</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.tools.utils</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.apache.commons.exec</artifactId>
            <version>${lib.org.apache.commons.exec.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>ch.ethz.ssh2</artifactId>
            <version>${lib.ch.ethz.ssh2.version}</version>
        </dependency>
    </dependencies>

    <!-- ************************************************************* -->
    <!-- *** Project Information ************************************* -->
    <!-- ************************************************************* -->

    <name>${project.artifactId} ${project.version}</name>
    <description></description>

    <!-- ************************************************************* -->
    <!-- *** Build Settings ****************************************** -->
    <!-- ************************************************************* -->

    <packaging>bundle</packaging>

    <properties>
	<qemu.directory>target/qemu</qemu.directory>
    </properties>

    <build>
	<plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-qemu</id>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.qemu</groupId>
                                    <artifactId>qemu-linux-i386</artifactId>
                                    <version>0.12.5</version>
				    <type>tgz</type>
				    <outputDirectory>${qemu.directory}/qemu_linux_32/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.qemu</groupId>
                                    <artifactId>qemu-linux-x86_64</artifactId>
                                    <version>0.12.5</version>
				    <type>tgz</type>
				    <outputDirectory>${qemu.directory}/qemu_linux_64/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.qemu</groupId>
                                    <artifactId>qemu-windows-i386</artifactId>
                                    <version>0.12.2</version>
				    <type>tgz</type>
				    <outputDirectory>${qemu.directory}/qemu_windows/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.qemu</groupId>
                                    <artifactId>qemu-OSX10.6-x86_64</artifactId>
                                    <version>0.12.4</version>
				    <type>tgz</type>
				    <outputDirectory>${qemu.directory}/qemu_OSX-10.6/</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.qemu</groupId>
                                    <artifactId>bios.bin</artifactId>
                                    <version>0.12.5</version>
				    <type>tgz</type>
				    <outputDirectory>${qemu.directory}/</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
 	<resources>
      	    <resource>
        	<directory>${qemu.directory}</directory>
		<includes>
		   <include>**</include>
		</includes>
      	    </resource>
        </resources>
    </build>

</project>






