<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>plugins</artifactId>
        <groupId>org.openmole</groupId>
        <version>0.3</version>
    </parent>

    <artifactId>org.openmole.plugin.tools.code</artifactId>

    <dependencies>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.commons.exception</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.core.workflow.implementation</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <!-- ************************************************************* -->
    <!-- *** Project Information ************************************* -->
    <!-- ************************************************************* -->

    <name>${project.artifactId} ${project.version}</name>
    <description></description>

    <!-- ************************************************************* -->
    <!-- *** Build Settings ****************************************** -->
    <!-- ************************************************************* -->

    <packaging>bundle</packaging>

    <properties>
        <bundle.namespace>${project.artifactId}</bundle.namespace>
        <import.packages>*;resolution:=optional</import.packages>
        <export.packages>${bundle.namespace}.*;version="${pom.version}"</export.packages>
        <symbolic.name>${pom.artifactId};singleton:=true</symbolic.name>
        <embed-dep>*;scope=provided;type=!pom;inline=true</embed-dep>
        <embed-transitive>true</embed-transitive>
    </properties>

</project>







