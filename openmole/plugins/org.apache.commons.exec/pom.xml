<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- ************************************************************* -->
    <!-- *** POM Relationships *************************************** -->
    <!-- ************************************************************* -->

    <parent>
        <artifactId>plugins</artifactId>
        <groupId>org.openmole</groupId>
        <version>0.3</version>
    </parent>

    <!--Used to build the symbolic name of the bundle-->
    <artifactId>org.apache.commons.exec</artifactId>
    <version>${lib.org.apache.commons.exec.version}</version>

    <!-- ************************************************************* -->
    <!-- *** Project Information ************************************* -->
    <!-- ************************************************************* -->

    <name>${project.artifactId} ${project.version}</name>
    <description></description>

    <!-- ************************************************************* -->
    <!-- *** Build Settings ****************************************** -->
    <!-- ************************************************************* -->

    <packaging>bundle</packaging>
    <dependencies>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-exec</artifactId>
        </dependency>
    </dependencies>
    <properties>
        <bundle.namespace>${project.artifactId}</bundle.namespace>
        <import.packages>*;resolution:=optional</import.packages>
        <export.packages>*;version="${pom.version}"</export.packages>
        <symbolic.name>${pom.artifactId};singleton:=true</symbolic.name>
        <embed-dep>*;scope=provided;type=!pom;inline=true</embed-dep>
        <embed-transitive>true</embed-transitive>
    </properties>

</project>

