    <groupId>org.openmole.ui.console</groupId>
    <artifactId>openmole-ui-console-installer</artifactId>
    <version>0.4-SNAPSHOT</version>
    <packaging>pom</packaging>
 
    <name>OpenMOLE console installer</name>
 
    <url>http://www.openmole.org/</url>
 
    <dependencies>
