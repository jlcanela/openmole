<?xml version="1.0" encoding="UTF-8"?>
<installation version="1.0">
    <info>
        <appname>OpenMOLE</appname>
        <appversion>$VERSION$</appversion>
        <uninstaller write="yes" />
        <javaversion>1.6</javaversion>
        <pack200 />
    </info>
    
    <packs>
        <pack name="OpenMOLE Console" required="yes">
            <description>OpenMOLE</description>
            <fileset dir="../dependency/org.openmole.ui.console-$VERSION$/" targetdir="$INSTALL_PATH" />
            <file src="../dependency/org.openmole.runtime.tar.gz" targetdir="$USER_HOME/.openmole/runtime/" />
            <file src="../jvm-linux-x64.tar.gz" targetdir="$USER_HOME/.openmole/runtime/" />
            <file src="../jvm-linux-i386.tar.gz" targetdir="$USER_HOME/.openmole/runtime/" />
            <fileset dir="../dependency/plugins-$VERSION$/" targetdir="$INSTALL_PATH/openmole-plugins/" /> 
            <fileset dir="../dependency/plugins-ui-$VERSION$/" targetdir="$INSTALL_PATH/openmole-plugins-ui/" /> 
        </pack>
    </packs>
    
    <resources>
        <res id="LicencePanel.licence" src="AGPLv3.txt"/>
    </resources>

    <panels>
        <panel classname="HelloPanel" />
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel" />
        <panel classname="InstallPanel" />
        <panel classname="SimpleFinishPanel" />
    </panels>

    <locale>
        <langpack iso3="eng"/>
    </locale>

    <guiprefs resizable="yes" width="640" height="480" />

</installation>
