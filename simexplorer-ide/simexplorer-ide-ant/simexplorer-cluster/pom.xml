
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <parent>
        <groupId>org.simexplorer</groupId>
        <artifactId>simexplorer</artifactId>
        <version>0.3</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.simexplorer.cluster</artifactId>
    <packaging>pom</packaging>
    <name>simexplorer-ide-ant-cluster</name>
    <dependencies>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.core.workflow.model</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.core.implementation</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.core.workflow.methods</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.core.structuregenerator</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.misc.clonning</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.environmentprovider.glite</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.domain.interval</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.domain.relativerange</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.environmentprovider.jsaga</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.task.filemanagment</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.task.groovy</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.task.systemexec</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.plan.boxbehnken</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.plan.centralcomposite</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.plan.complete</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openmole</groupId>
            <artifactId>org.openmole.plugin.plan.lhs</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>com.springsource.org.apache.commons.configuration</artifactId>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>com.springsource.javax.servlet.jsp</artifactId>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-bundles</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <!-- Exclude osgi that is provided by netbinox -->
                            <excludeArtifactIds>org.eclipse.osgi</excludeArtifactIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
