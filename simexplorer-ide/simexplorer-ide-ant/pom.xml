
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.openmole</groupId>
        <artifactId>openmole-ecosystem</artifactId>
        <version>0.3-SNAPSHOT</version>
    </parent>

    <artifactId>simexplorer-ide-ant</artifactId>

    <name>${project.artifactId} ${project.version}</name>

    <packaging>pom</packaging>

    <modules>
        <module>org.netbeans.spi.wizard</module>
        <module>org.simexplorer.ui.ide.is/wrapped-jars</module>
        <module>simexplorer-cluster</module>
    </modules>

    <properties>
        <simexplorer-ide.ant-script>${basedir}/build.xml</simexplorer-ide.ant-script>
    </properties>
    
    <build>
        <plugins>
            <!-- fetch and extract netbinox that will be used for the modules suite build -->
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-netbinox</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.netbeans</groupId>
                                    <artifactId>org.netbeans.netbinox</artifactId>
                                    <version>hg-201006041137</version>
                                    <type>zip</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- invoke modules suite build script -->
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <!-- older version fails on hudson server (debian lenny) -->
                <version>1.3</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${simexplorer-ide.ant-script}"
                                     target="build"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>package</id>
                        <phase>package</phase>
                        <configuration>
                            <tasks>
                                <ant antfile="${simexplorer-ide.ant-script}"
                                     target="build-zip"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>ant</groupId>
                        <artifactId>ant-optional</artifactId>
                        <version>1.5.2</version>
                    </dependency>
                    <dependency>
                        <groupId>com.sun</groupId>
                        <artifactId>tools</artifactId>
                        <version>1.6</version>
                        <scope>system</scope>
                        <systemPath>${java.home}/../lib/tools.jar</systemPath>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

</project>


