<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <!-- ************************************************************* -->
    <!-- *** POM Relationships *************************************** -->
    <!-- ************************************************************* -->

    <parent>
        <artifactId>libraries</artifactId>
        <groupId>org.openmole.core</groupId>
        <version>0.4-RC4-SNAPSHOT</version>
    </parent>

    <!--Used to build the symbolic name of the bundle-->
    <artifactId>fr.in2p3.jsaga</artifactId>

    <dependencies>
        <dependency>
            <groupId>fr.in2p3.jsaga</groupId>
            <artifactId>jsaga-engine</artifactId>
            <version>${lib.fr.in2p3.jsaga.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.in2p3.jsaga.adaptor</groupId>
            <artifactId>jsaga-adaptor-classic</artifactId>
            <version>${lib.fr.in2p3.jsaga.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.in2p3.jsaga.adaptor</groupId>
            <artifactId>jsaga-adaptor-voms</artifactId>
            <version>${lib.fr.in2p3.jsaga.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.in2p3.jsaga.adaptor</groupId>
            <artifactId>jsaga-adaptor-globus</artifactId>
            <version>${lib.fr.in2p3.jsaga.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.in2p3.jsaga.adaptor</groupId>
            <artifactId>jsaga-adaptor-srm</artifactId>
            <version>${lib.fr.in2p3.jsaga.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>fr.in2p3.jsaga.adaptor</groupId>
            <artifactId>jsaga-adaptor-wms</artifactId>
            <version>${lib.fr.in2p3.jsaga.version}</version>
            <scope>provided</scope>
        </dependency>
       	<dependency>
            <groupId>org.openmole.core</groupId>
            <artifactId>fr.in2p3.jsaga.adaptor.ssh</artifactId>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
           <groupId>xalan</groupId>
           <artifactId>xalan</artifactId>
           <version>2.7.1</version>
        </dependency>
    </dependencies>

    <!-- ************************************************************* -->
    <!-- *** Project Information ************************************* -->
    <!-- ************************************************************* -->

    <name>${project.artifactId}</name>

    <!-- ************************************************************* -->
    <!-- *** Build Settings ****************************************** -->
    <!-- ************************************************************* -->

    <packaging>bundle</packaging>

    <properties>
        <import.packages>scala.*,*;resolution:=optional</import.packages>
        <libraries.export.packages>org.ogf.saga.*,fr.in2p3.jsaga.*,org.globus.*</libraries.export.packages>
    </properties>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-equinox-configuration</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources/</directory>
                                    <includes>
                                        <include>META-INF</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
